<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <%- include ('../partials/head.ejs') %>
</head>

<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <div class="container">
        <h1>
            <%- poster.name%> Show Page</h1>

        <br />
        <button type="button" name="button">
        <a href="/posters/<%=poster.id%>/edit">Edit</a>
      </button>
        <br />
        <br />
        <form action="/posters/<%=poster.id%>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE" />
        </form>
        <br />
        <button type="button" name="button">
        <a href="/posters">Back</a>
      </button>
    </div>

    <h4>Tips</h4>
    <ul>
        <% poster.tips.forEach(tip => { %>
            <li>
                <%= tip.name %>
            </li>
            <% }) %>
    </ul>
</body>

</html>